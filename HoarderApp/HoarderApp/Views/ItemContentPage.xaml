<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HoarderApp.Views.ItemContentPage">
    <ContentPage.ToolbarItems>
    <ToolbarItem Text="edit+"
                 Order="Primary"
                 Priority="0"
                 Clicked="EditItem"
                 />
</ContentPage.ToolbarItems>

    <StackLayout BackgroundColor="gray">
        <Image x:Name="ItemImage" HeightRequest="600"></Image>
        <Button x:Name="NextImageButton" FontSize="15" Text="Next Image" BackgroundColor="#312e31" TextColor="White" WidthRequest="50" HeightRequest="50" Clicked="NextPicture"/>
        <Label x:Name="ItemName" Padding="3"></Label>
        <Label x:Name="ItemDesc" Padding="3"></Label>

    </StackLayout>
</ContentPage>
